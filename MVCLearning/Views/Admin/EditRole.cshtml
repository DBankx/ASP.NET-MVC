@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>


<form asp-controller="admin" class="mt-3" asp-action="editrole" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" />
        <span asp-validation-for="RoleName"></span>
    </div>
    <button class="btn btn-primary">Update Role</button>
    <a class="btn btn-danger ml-2" asp-action="listroles" asp-controller="admin">Cancel</a>
</form>


<div class="card">
    <div class="card-header">
        <h3>Users in this role</h3>
    </div>
    <div class="card-body">
        @if (Model.users.Any())
        {
            @foreach (var item in Model.users)
            {
                <p class="mb-2">@item</p>
            }
        } else
        {
            <h5>No users in this role</h5>
        }

    </div>
    <div class="card-footer">
        <a href="#" class="btn btn-primary" style="width: auto">Add Users</a>
        <a href="#" class="btn btn-primary" style="width: auto">Remove users</a>
    </div>
</div>
