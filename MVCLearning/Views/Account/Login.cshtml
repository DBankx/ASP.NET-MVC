@model LoginViewModel
@{
    ViewBag.Title = "User Login";
    var returnUrl = @Context.Request.Query["returnurl"];
}

<h1>User Login</h1>
<hr />

<form asp-action="login" asp-controller="account" method="post" asp-route-returnurl="@returnUrl">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe"></label>
        <input type="checkbox" asp-for="RememberMe" class="form-control" />
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
</form>
