@model Employee
@inject IEmployeeRepository _empRepository;
@{ 
    ViewBag.Title = "Create Employee";
}

<form asp-controller="home" asp-action="Create" method="POST" class="mt-3">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" type="text" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="text" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <label asp-for="Department">Department</label>
    <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
        <option value="">Please select</option>
    </select>
    <span asp-validation-for="Department"></span>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <button class="btn btn-primary">Create</button>
    </div>
    <div>
        Total Employees Count = @_empRepository.GetAllEmployees().Count();
    </div>
</form>