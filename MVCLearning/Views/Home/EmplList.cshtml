@model IEnumerable<Employee>

@{
    ViewBag.Title = "Find an employee";
}

<div class="card-deck">
    <div class="row">
        @foreach (var empl in Model)
        {
            var photopath = "~/Images/" + (empl.Photo ?? "pic 11.jpg");
            <div class="card m-3 col-xl-4 col-md-6 col-sm-12 col-lg-4" style="min-width: 18rem; max-width: 30.5%">
                <div class="card-header">
                    <h3>@empl.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@empl.Id" class="btn btn-primary m-1">View</a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@empl.Id"s class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
</div>